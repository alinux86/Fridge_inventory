<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/textFieldsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editTextBarcode"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="0.9"
                android:ems="10"
                android:hint="Barcode"
                android:text="4012359144003" />

            <ImageView
                android:id="@+id/cameraButton"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.1"
                app:srcCompat="@android:drawable/ic_menu_camera" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonGetProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Product Name" />

        <EditText
            android:id="@+id/editTextNewProductName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextNewProductQuantity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Quantity"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextNewProductDate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Date"
            android:inputType="none" />

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAddElement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Add item" />

            <!--            <Button-->
            <!--                android:id="@+id/buttonTestLogElements"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="1"-->
            <!--                android:text="Log items" />-->

            <!--            <Button-->
            <!--                android:id="@+id/buttonTestDelete"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="1"-->
            <!--                android:text="Delete all" />-->

        </LinearLayout>

        <!--        <TextView-->
        <!--            android:id="@+id/textViewItemsList"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:singleLine="false" />-->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>